if [[ -n "$XINIT_LOAD" &&
   ( -z "$WINDOW_MANAGER" || "$WINDOW_MANAGER" == "xmonad" ) ]]; then
   export WINDOW_MANAGER="xmonad"

   type xcompmgr > /dev/null && ! ps -A | grep xcompmgr > /dev/null && xcompmgr -Ffn &
   type unclutter > /dev/null && ! ps -A | grep unclutter > /dev/null && unclutter -idle 1 &
   xsetroot -cursor_name left_ptr
   type urxvtd > /dev/null && ! ps -A | grep urxvtd > /dev/null && urxvtd -q -o -f
fi

# vim: ft=sh
